
@{
    ViewData["Title"] = "Manager";
}

<h2>Welcome back Mr. President</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Manager">
            <div class="form-group">
                <div class="control-label">Select a Report to run</div>
                <select name="report" class="form-control">
                    <option value="Order">Display Order Details</option>
                    <option value="LocOrderHistory">Display Order History of a Location</option>
                    <option value="UserOrderHistory">Display Order History of a User</option>
                    <option value="EarliestOrderHistory">Order History sorted with Earliest first</option>
                    <option value="LatestOrderHistory">Order History sorted with Latest first</option>
                    <option value="PHighOrderHistory">Order History sorted with Most Expensive first</option>
                    <option value="PLowOrderHistory">Order History sorted with Least Expensive first</option>
                    <option value="LocInv">Inventory by Location</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" name="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


